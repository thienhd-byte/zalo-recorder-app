{
  "name": "zalo-auto-recorder",
  "version": "1.1.1",
  "main": "src/bootstrap.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clipboard-event": "^1.6.0",
    "config": "^3.3.12"
  },
  "build": {
    "appId": "thienhd.zalorecorder",
    "productName": "Zalo Recorder (ThienHD)",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "config/**"
    ],
    "extraResources": [
      {
        "from": "tools/",
        "to": "tools"
      },
      {
        "from": "config/",
        "to": "config"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "installer.nsh"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "icon": "icon.ico",
    "asar": true,
    "asarUnpack": [
      "tools/**"
    ]
  }
}
